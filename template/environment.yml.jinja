name: parma-mining-{{module_name}}
channels:
  - conda-forge
  - nodefaults
dependencies:
  # Git
  - pre-commit
  # Python
  - pip
  - python =3.11
  - setuptools-scm
  - setuptools >=61 # pyproject.toml support
  # Development
  - types-pyyaml
  # Testing
  - pytest >=6 # --import-mode option
  - pytest-cov
  - httpx
  # Dependencies (core)
  - fastapi >=0.104.0
  - polars >=0.19.0
  - pydantic >=2
  - pyyaml
  - typer >=0.9.0
  - uvicorn >=0.23.2
  - python-jose >=3.3.0
